# =============================================================================
# Airflow environment variables
# Copy to .env and fill in values before running docker compose up
# =============================================================================

# Fernet key for Airflow encryption (generate one):
#   python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
AIRFLOW_FERNET_KEY=

# App API base URL (your FastAPI app running on the host)
APP_BASE_URL=http://host.docker.internal:8000

# Postgres operational DB (for extract step)
DATABASE_URL=postgresql://forwarder:forwarder@host.docker.internal:5432/postgres

# Snowflake audit warehouse
SNOWFLAKE_ACCOUNT=
SNOWFLAKE_USER=
SNOWFLAKE_PASSWORD=
SNOWFLAKE_WAREHOUSE=AALCP_CORTEX_WH
SNOWFLAKE_DATABASE=AALCP_DB
