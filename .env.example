# Database Configuration
# Option 1: Local Postgres (requires Docker or local install)
#DATABASE_URL=postgresql://forwarder:forwarder@localhost:5432/postgres

# Option 2: Supabase (recommended for quick start)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT].supabase.co:5432/postgres

# Option 3: Neon.tech (free tier available)
# DATABASE_URL=postgresql://[user]:[password]@[host].neon.tech/[database]?sslmode=require

# LLM Provider (optional - only needed for full agent runs)
LLM_PROVIDER=openai
OPENAI_API_KEY=sk-...
# Optional model overrides
OPENAI_MODEL=gpt-4o-mini
# Or use Anthropic
# LLM_PROVIDER=anthropic
# ANTHROPIC_API_KEY=sk-ant-...
# ANTHROPIC_MODEL=claude-3-5-sonnet-latest

# Evidence Storage
EVIDENCE_ROOT=./var/evidence/

# API Settings
API_HOST=0.0.0.0
API_PORT=8000

# Snowflake Audit Warehouse (optional - only needed for /rag/query endpoint)
# Create a Snowflake account in a Cortex-supported region (US East, US West, EU)
# Then create warehouse: CREATE WAREHOUSE AALCP_CORTEX_WH WAREHOUSE_SIZE='X-SMALL';
# Then run: audit_warehouse/sql/01_schema.sql in a Snowflake Worksheet
#SNOWFLAKE_ACCOUNT=your_account
#SNOWFLAKE_USER=your_user
#SNOWFLAKE_PASSWORD=your_password
#SNOWFLAKE_WAREHOUSE=AALCP_CORTEX_WH
#SNOWFLAKE_DATABASE=AALCP_DB
